@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>title</title>
    <link href="~/css/viewstart.css" rel="stylesheet" type="text/css"/>
</head>
<body>
    <header>
        <div id="head">
            <img src="~/c.svg">
            <div class="menu">
                <a href="/home/index">Home</a>
                <a asp-controller="blog" asp-action="index">Blog MVC</a>
                <a href="/api/blogs">BlogsApi</a>
                <a asp-controller="account" asp-action="role">Role create</a>
            </div>
            <div class="menu-login">
                @await Component.InvokeAsync("MenuLogin")
            </div>
        </div>
    </header>
    <div id="main">
        @RenderBody()
    </div>
</body>
</html>
